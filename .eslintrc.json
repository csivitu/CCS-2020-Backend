{
	"env": {
		"es2021": true,
		"node": true
	},
	"extends": [
		"airbnb-base"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint"
	],
	"rules": {
		"no-tabs": 0,
		"indent": [
			"error",
			"tab"
		]
	},
	"settings": {
		"import/resolver": {
			"node": {
				"extensions": [
					".js",
					".ts"
				],
				"paths": [
					"src"
				]
			}
		}
	}
}